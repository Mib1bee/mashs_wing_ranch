.formtitle{
	color:#000000;
	text-transform:uppercase;
	font-size:16px;
	font-weight:normal!important; 
	text-align:center;
	margin-bottom:10px;  
}

.buttons{
	background-color:#000000;
	color:#ffffff;
	font-size:12px;
	padding-left:7px;
	padding-right:7px;  
	padding-top:3px;
	padding-bottom:3px;  
	border:1px solid #000000;
	font-weight:normal!important;
	text-transform:uppercase;
	text-decoration:none;
	cursor:pointer;
	margin-top:5px; 
	margin-right:5px;
	max-width:150px;
}

.buttons:hover{
	background-color:#d24444;
	color:#6a0906;
	border:1px solid #6a0906;
}

label{
	text-transform:uppercase;
	font-size:12px;
	margin-right:10px; 
}

input{
	width:250px;
	background-color:#b4b4b4;
	border:1px solid #000000;
	margin-bottom:10px;
	font-family:'Signika'; 
	font-size:12px;
	font-weight:normal!important;
	color:#000000;
	min-height:25px;   
}

textarea{
	width:250px;
	background-color:#b4b4b4;
	border:1px solid #000000;
	margin-bottom:10px;
	font-family:'Signika'; 
	font-size:12px;
	font-weight:normal!important;
	color:#000000;
	min-height:25px;   
}

select{
	width:250px;
	background-color:#b4b4b4;
	border:1px solid #000000;
	margin-bottom:10px;
	font-family:'Signika'; 
	font-size:12px;
	font-weight:normal!important;
	color:#000000;
	min-height:25px;   
}

/* Errors */
.field_with_errors  label{
	color:#a80602;
}

#errorcontainer{
	background-color:#ffffff;
	position:relative;
	margin-bottom:15px;
	border:1px solid #000000;
	max-width:400px;
}

#errorcontainer h2{
	background-color:#d24444;
	color:white;
	padding:10px;
	font-size:12px;
	border-bottom:1px solid #000000;
}

#errorcontainer p{
	font-size:12px;
	color:#000000; 
	text-align:left; 
}
#errorcontainer ul{
	padding-top:15px;
	padding-bottom:15px; 
}
#errorcontainer ul li{
	list-style: square;
	margin-left:30px;
}