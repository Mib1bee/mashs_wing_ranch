/* RANCHES CONTAINER */
#ranchescontainer{
	position:relative;
	width:100%;
	height:800px;
	background-color:#20509f;
}
/* END RANCHES FRANCHISE */

/* RANCHES CONTENT (TO CENTRALISE ALL CONTENT) */
#ranchescontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	margin-top:0px;
	background: url(ranches/ranches_bg.png) 50% 0 no-repeat fixed;
	overflow-x:hidden;
}
/* RANCHES ORDER CONTENT */

/* RANCHES TENDERS PICTURE */
#ranchestenders{
	position:absolute;
	width:422px;
	height:333px;
	top:50px;
	left:650px;
	background:url(ranches/ranches_tenders.png) 50% 0px no-repeat;
}
/* END RANCHES TENDERS PICTURE */

/* RANCHES HEADING */
#ranchesheading{
	position:absolute;
	top:25px;
	left:275px;
	height:100px;
}
/* END RANCHES HEADING */

/* RANCHES HEADING H2 */
#ranchesheading h2{
	font-family:'Bebas Neue'; 
	font-weight:normal!important;
	color:#ffa800;
	font-size:50px!important;
	text-transform:uppercase;
	line-height:50px;
	margin-top:20px;
}
/* END RANCHES HEADING H2 */

/* RANCHES HEADING H1 */
#ranchesheading h1{
	font-family:'Bebas Neue';
	font-weight:normal!important;
	color:#ffffff;
	margin-left:-3px;
	font-size:125px!important;
	line-height:100px; 
	text-transform:uppercase;
}
/* END RANCHES HEADING H1 */

/* START RANCHES SLOGAN */
#ranchesslogan{
	position:absolute;
	margin-right:auto;
	margin-left:auto;
	top:500px;
	left:450px;
}

#ranchesslogan h1{
	font-family:'Lobster';
	font-weight:normal!important;
	font-size:60px!important;
	color:#ffa800;
}
/* END RANCHES SLOGAN */



/* RANCHES WRITING */
#rancheswriting{
	position:absolute;
	width:460px;
	height:100px;
	top:300px;
	left:275px;
	color:#ffffff;
}
/* END RANCHES WRITING */


/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#ranchescontainer a:link{
	background-image:url(ranches/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#ffa800;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#ranchescontainer a:visited{
	color:#ffa800;
}

#ranchescontainer a:hover{
	color:#ffffff;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
