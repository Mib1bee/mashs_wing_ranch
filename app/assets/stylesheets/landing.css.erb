/* END LANDING RIGHT BLOCK  */

/* PARAGRAPH STYLE FOR LANDING BLOCKS */
.landingp{
	margin:0;
	margin-top:10px;
	font-size:14px;
	font-weight:400;
	line-height:17px; 
	color:#f2e9d2;
}
/* END PARAGRAPH STYLE FOR LANDING BLOCKS */

/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#landingcontainer a:link{
	background-image:url(landing/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#f2e9d2;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#landingcontainer a:visited{
	color:#f2e9d2;
}

#landingcontainer a:hover{
	color:#f03738;
}

/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */


