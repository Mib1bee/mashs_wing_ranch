/* LANDING SECTION */

/* LANDING CONTAINER */
#landingcontainer{
	position:relative;
	top:63px;
	width:100%;
    height:800px;
	background-color:#000000;
}
/* END LANDING CONTAINER */

/* LANDING CONTENT */
#landingcontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	background: url(landing/landing_bg_temp.png) 50% 0 no-repeat fixed;
	overflow-x:hidden;
}
/* END LANDING CONTENT */

/* LANDING HEADING */
#landingheading{
	position:absolute;
	top:70px;
	left:200px;
	height:100px;
}
/* END LANDING HEADING */

/* LANDING HEADING H1 */
#landingheading h1{
	font-family:'Bebas';
	font-weight:normal!important;
	color:#f0e7cd;
	font-size:125px;
	line-height:100px; 
	text-transform:uppercase;
}
/* END LANDING HEADING H1 */

/* LANDING HEADING H2 */
#landingheading h2{
	font-family:'Bebas'; 
	font-weight:normal!important;
	color:#f03738;
	font-size:48px;
	line-height:50px;
	text-transform:uppercase; }
/* END LANDING HEADING H2 */

/* LANDING WRITING */
#landingwriting{
	position:absolute;
	width:550px;
	height:100px;
	top:340px;
	left:200px;
	color:#f0e7cd;
	overflow:auto;
}
/* END LANDING WRITING */

