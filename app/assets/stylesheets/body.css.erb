/* BODY SECTION*/
html{
	height:100%;
	overflow-x:hidden;
}

body{
	background-color: #ffffff;
	margin: 0;
	padding-top: 0;
	font-family: 'Signika',sans-serif;
	width:100%;
	height:100%;
	opacity:0.99999; 
}
/* END BODY SECTION */

/* CONTAINER SECTION
TO HOLD THE WHOLE CENTRALISED WEB PAGE */
#bodycontainer{
	position:relative;
	top:0;
	left:0;
	width:100%;
	background-color:#ffffff;
	margin-left:auto;
	margin-right:auto;
}
/* END CONTAINER SECTION */

/* CSS FOR DESCRIPTIVE WRITING ON ALL SECTIONS (CONSISTANT STYLE) */
/* WILL USE SPAN FOR COLOURING */
.writing{
	font-family:'Signika';
	font-weight:200!important;
	font-size:16px;
	font-weight:200;
	line-height:19px; 
}
/* END DESCRIPTIVE WRITING */

/* CSS FOR LINKS ON ALL SECTIONS (CONSISTANT STYLE) */
.links{
	font-family:'Qlassik';
	font-size:22px;
	font-weight:normal!important;
	text-transform:uppercase;
	text-decoration:underline;
	cursor: pointer;
}
/* WILL USE SPAN FOR COLOURING */ 

.anchor {
    display: block;
    height: 63px;
    margin-top:-63px;
    visibility:hidden;
}

a{
	text-decoration:none;
}
