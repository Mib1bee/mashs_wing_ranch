/* FRANCHISE CONTAINER */
#franchisecontainer{
	position:relative;
	width:100%;
	height:800px;
	background-color:#c51209;
}
/* END ABOUT FRANCHISE */

/* FRANCHISE CONTENT (TO CENTRALISE ALL CONTENT) */
#franchisecontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	margin-top:0px;
	background: url(franchise/franchise_bg.png) 50% 0 no-repeat fixed;
	overflow:hidden;
}
/* FRANCHISE ORDER CONTENT */

/* FRANCHISE BULL PICTURE */
#franchisebull{
	position:absolute;
	width:234px;
	height:100%;
	top:40px;
	left:750px;
	background:url(about/about_bull.png) 50% 0px no-repeat;
}
/* END FRANCHISE BULL PICTURE */

/* FRANCHISE HEADING */
#franchiseheading{
	position:absolute;
	top:50px;
	left:250px;
	height:100px;
}
/* END FRANCHISE HEADING */

/* FRANCHISE HEADING H2 */
#franchiseheading h2{
	font-family:'Bebas'; 
	font-weight:normal!important;
	color:#f9edb4;
	font-size:50px!important;
	text-transform:uppercase;
	line-height:1px;
	margin-top:20px;
}
/* END FRANCHISE HEADING H2 */

/* FRANCHISE HEADING H1 */
#franchiseheading h1{
	font-family:'Bebas';
	font-weight:normal!important;
	color:#f9edb4;
	font-size:125px!important;
	margin-left:-5px;
	line-height:100px; 
	text-transform:uppercase;
}
/* END FRANCHISE HEADING H1 */

/* ORDER WRITING */
#franchisewriting{
	position:absolute;
	width:460px;
	height:100px;
	top:315px;
	left:250px;
	color:#ffffff;
}
/* END ORDER WRITING */


/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#franchisecontainer a:link{
	background-image:url(franchise/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#ffffff;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#franchisecontainer a:visited{
	color:#ffffff;
}

#franchisecontainer a:hover{
	color:#f9edb4;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
