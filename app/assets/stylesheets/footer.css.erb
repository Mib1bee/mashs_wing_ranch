#footercontainer{
	position:relative;
	bottom:2px;
	background-image:url(footer/footer_bg.png);
	background-repeat:repeat;
	width:100%; 
	height:50px;
	
}

#footercontent{
	position:relative; 
	width:1280px;
	margin-right:auto;
	margin-left:auto;  
}

#footercontent p{
	position:absolute;
	left:200px;
	top:15px;
	color:#b23232;
}

/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#footercontent a:link{
	position:absolute;
	top:15px;
	right:175px;
	background-image:url(rewards/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#b23232;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#footercontent a:visited{
	color:#b23232;
}

#footercontent a:hover{
	color:#000000;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
