/* SOCIAL CONTAINER */
#socialcontainer{
	position:relative;
	width:100%;
	height:800px;
	background-color:#189dc4;
}
/* END SOCIAL FRANCHISE */

/* SOCIAL CONTENT (TO CENTRALISE ALL CONTENT) */
#socialcontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	margin-top:0px;
	background: url(social/social_bg.png) 50% 0 no-repeat fixed;
	overflow-x:hidden;
}
/* SOCIAL ORDER CONTENT */

/* SOCIAL  PICTURE */
#socialhand{
	position:absolute;
	width:285px;
	height:260px;
	top:150px;
	left:750px;
	background:url(social/social_hand.png) 50% 0px no-repeat;
}
/* END SOCIAL  PICTURE */

/* SOCIAL HEADING */
#socialheading{
	position:absolute;
	top:75px;
	left:250px;
	height:100px;
}
/* END SOCIAL HEADING */

/* SOCIAL HEADING H2 */
#socialheading h2{
	font-family:'Bebas Neue'; 
	font-weight:normal!important;
	color:#ffffff;
	font-size:50px!important;
	text-transform:uppercase;
}
/* END SOCIAL HEADING H2 */

/* SOCIAL HEADING H1 */
#socialheading h1{
	font-family:'Bebas Neue';
	font-weight:normal!important;
	color:#000000;
	font-size:125px!important;
	margin-left:-5px;
	line-height:100px; 
	text-transform:uppercase;
}
/* END SOCIAL HEADING H1 */

/* ORDER WRITING */
#socialwriting{
	position:absolute;
	width:460px;
	height:100px;
	top:350px;
	left:250px;
	color:#000000;
}
/* END ORDER WRITING */


/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#socialcontainer a:link{
	background-image:url(social/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#000000;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#socialcontainer a:visited{
	color:#000000;
}

#socialcontainer a:hover{
	color:#ffffff;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
