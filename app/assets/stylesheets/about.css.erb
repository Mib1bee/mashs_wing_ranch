/* ABOUT CONTAINER */
#aboutcontainer{
	position:relative;
	width:100%;
	height:800px;
	background-color:#0c0c0c;
}
/* END ABOUT CONTAINER */

/* ABOUT CONTENT (TO CENTRALISE ALL CONTENT) */
#aboutcontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	background: url(about/about_bg.png) 50% 0 no-repeat fixed;
	overflow:hidden;
}
/* ABOUT ORDER CONTENT */

/* ABOUT BULL PICTURE */
#aboutbull{
	position:absolute;
	width:234px;
	height:100%;
	top:60px;
	left:250px;
	background:url(about/about_bull.png) 50% 0px no-repeat;
}
/* END ABOUT BULL PICTURE */

/* ABOUT HEADING */
#aboutheading{
	position:absolute;
	top:125px;
	left:550px;
	width:346px;
	height:242px;
	background:url(about/about_heading.png) no-repeat;
}
/* END ABOUT HEADING */

/* ORDER WRITING */
#aboutwriting{
	position:absolute;
	width:460px;
	height:100px;
	top:390px;
	left:550px;
	color:#f4f4f4;
}
/* END ORDER WRITING */


/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#aboutcontainer a:link{
	background-image:url(about/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#f4f4f4;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#aboutcontainer a:visited{
	color:#f4f4f4;
}

#aboutcontainer a:hover{
	color:#c82729;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
