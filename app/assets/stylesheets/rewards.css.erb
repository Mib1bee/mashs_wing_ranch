	position:relative;
	width:100%;
	height:800px;
	background-color:#77001b;
}
/* END SOCIAL FRANCHISE */

/* SOCIAL CONTENT (TO CENTRALISE ALL CONTENT) */
#rewardscontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	margin-top:0px;
	background: url(rewards/rewards_bg.png) 50% 0 no-repeat fixed;
	overflow-x:hidden;
}
/* SOCIAL ORDER CONTENT */

/* SOCIAL  PICTURE */
#rewardsbaloons{
	position:absolute;
	width:382px;
	height:645px;
	top:50px;
	left:200px;
	background:url(rewards/rewards_balloons.png) 50% 0px no-repeat;
}
/* END SOCIAL  PICTURE */

/* SOCIAL HEADING */
#rewardsheading{
	position:absolute;
	top:100px;
	left:675px;
	height:100px;
}
/* END SOCIAL HEADING */

/* SOCIAL HEADING H2 */
#rewardsheading h2{
	font-family:'Lobster'; 
	font-weight:normal!important;
	color:#000000;
	font-size:30px!important;
	margin-bottom:10px;
}
/* END SOCIAL HEADING H2 */

/* SOCIAL HEADING H1 */
#rewardsheading h1{
	font-family:'Lobster';
	font-weight:normal!important;
	color:#f9edb4;
	font-size:100px!important;
	margin-left:-5px;
	line-height:85px; 
}
/* END SOCIAL HEADING H1 */

/* ORDER WRITING */
#rewardswriting{
	position:absolute;
	width:350px;
	height:100px;
	top:320px;
	left:675px;
	color:#f9edb4;
}
/* END ORDER WRITING */


/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#rewardscontainer a:link{
	background-image:url(rewards/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#f9edb4;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#rewardscontainer a:visited{
	color:#f9edb4;
}

#rewardscontainer a:hover{
	color:#000000;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
