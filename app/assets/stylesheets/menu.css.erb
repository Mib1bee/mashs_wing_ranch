/* MENU SECTION CSS */

/* MENU CONTAINER TO CENTRALISE CONTENT */
#menucontainer{
	position:relative;
	width:100%;
    height:800px;
	background-color:#1d0f00;
}
/* END MENU CONTAINER */

/* MENU CONTENT */
#menucontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	background:url(menu/menu_bg.png);
	background-repeat:no-repeat;
	overflow-x:hidden;
}
/* END MENU CONTENT */

/* MENU WRITING */
#menuwriting{
	position:absolute;
	width:400px;
	height:100px;
	top:290px;
	left:560px;
	color:#fdb736;
}
/* END MENU WRITING */

/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#menucontainer a:link{
	background-image:url(menu/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#f2e9d2;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#menucontainer a:visited{
	color:#f2e9d2;
}

#menu a:active{
	color:#ffffff;
}

#menucontainer a:hover{
	color:#fdb736;
}


/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */

/* MENU HEADING */
#menuheading{
	position:absolute;
	top:400px;
	left:375px;
}
/* END MENU HEADING */

/* MENU HEADING H1*/
#menuheading h1{
	font-family:'Lobster';
	font-weight:normal!important;
	color:#fdb736;
	font-size:93px;
	margin-top:10px;
	line-height:82px; 
	text-align:center;
}
/* END MENU HEADING H1*/

/* MENU BURGER PIC */
#menuburger{
	position:absolute;
	width:416px;
	height:500px;
	top:20px;
	left:145px;
	background:url(menu/menu_burger.png) 50% 40px no-repeat;
}
/* END MENU BURGER PIC */

/* END MENU SECTION CSS */