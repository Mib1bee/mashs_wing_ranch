/* END FRANCHISE BULL PICTURE */

/* FRANCHISE HEADING */
#rewardsheading{
	position:absolute;
	top:55px;
	left:375px;
	height:100px;
}
/* END FRANCHISE HEADING */

/* FRANCHISE HEADING H2 */
#rewardsheading h2{
	font-family:'Bebas Neue'; 
	font-weight:normal!important;
	color:#000000;
	font-size:25px!important;
	text-transform:uppercase;
}
/* END FRANCHISE HEADING H2 */

/* FRANCHISE HEADING H1 */
#rewardsheading h1{
	font-family:'Bebas Neue';
	font-weight:normal!important;
	color:#f9edb4;
	font-size:60px!important;
	line-height:50px; 
	text-transform:uppercase;
}
/* END FRANCHISE HEADING H1 */

#rewardslinks{
	position:absolute;
	top:200px;
	left:375px; 
}

/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#rewardscontainer a:link{
	font-size:15px;
	margin-right:15px;
	line-height:0px; 
	background-repeat:no-repeat;
	background-position:right;
	color:#000000;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#rewardscontainer a:visited{
	color:#000000;
}

#rewardscontainer a:hover{
	color:#f9edb4;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */

#rewardsform{
	position:absolute;
	top:300px;
	left:300px;
}

h3.formsection{
	color:#ffffff;
	font-family:'Qlassik';
	font-size:20px;
	font-weight:normal!important;
	text-decoration:underline;
	text-transform:uppercase;  
	margin-bottom:10px; 
}

p.forminstructions{
	color:#000000;
	font-family:'Qlassik';
	font-size:16px;
	font-weight:normal!important;
	text-transform:uppercase;  
	margin-bottom:10px; 
}

table.rewardsapplication th{
	text-align:left;
	font-weight:normal!important;  
}

.buttons{
	background-color:#000000;
	color:#ffffff;
	font-size:12px;
	padding-left:7px;
	padding-right:7px;  
	padding-top:3px;
	padding-bottom:3px;  
	border:1px solid #000000;
	font-weight:normal!important;
	text-transform:uppercase;
	text-decoration:none;
	cursor:pointer;
	margin-top:5px; 
	margin-right:5px;
	max-width:150px;
}

.buttons:hover{
	background-color:#d24444;
	color:#6a0906;
	border:1px solid #6a0906;
}

label{
	color:#f9edb4;
	font-family:'Qlassik'; 
	text-transform:uppercase;
	font-weight:normal!important; 
	font-size:14px;
	margin-right:10px; 
}

.rewardsapplication input{
	width:175px;
	background-color:#ffffff;
	border:1px solid #000000;
	margin-bottom:15px;
	font-family:'Signika'; 
	font-size:12px;
	font-weight:normal!important;
	color:#000000;
	min-height:25px;   
}


/* Errors */
.field_with_errors  label{
	color:#000000;
}

#noticecontent{
	position:absolute;
	background-color:#000000; 
	top:100px;
	left:700px;
	width:250px;
	font-family:'Qlassik';
	font-size:16px;
	font-weight:normal!important;
	text-transform:uppercase;
	line-height:15px;
	text-align:center;    
	border:2px dashed #ffffff;
	padding:10px;  
}

.noticesuccess{color:#00bd4c;}
.noticeerror{color:#bc3200;}

p.extrainfo{
	color:#f9edb4;
	font-family:'Qlassik'; 
	text-transform:uppercase;
	font-weight:normal!important; 
	font-size:10px;
	margin-right:10px;
}
