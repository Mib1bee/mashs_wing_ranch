#headercontainer{
	position:relative;
	width:100%;
	height:200px;  
	background-color:#ecebdf;
}

#headercontent{
	position:relative;
	width:970px;
	height:200px;
	margin-left:auto;
	margin-right:auto; 
	font-weight:normal!important;
	background-color:#ecebdf;
}

#headerlogo{
	position:absolute;
	top:5px;
	left:426px;
	width:117px;
	height:140px;
	margin-left:auto;
	margin-right:auto; 	
	background-image:url(admin/bull.png);
	background-repeat:no-repeat; 
}

#headernavigation{
	position:absolute;
	bottom:15px;
	left:200px;
	margin:0;
	padding:0;
	color:#f03738;
}

/* NAVIGATION LIST */
#headernavigation li{
	display:inline;
	list-style-type:none;
	margin-right:40px;
}

#headerinformation{
	position:absolute;
	right:10px;
	top:10px; 
}

#headerinformation p{
	color:#272727;
	font-size:14px;
	text-align:right;
	line-height:18px  
}

#headercontent a:link{
	font-size:16px;
	text-transform:uppercase; 
	text-decoration:none; 
	color:#a80602;
}
#headercontent a:visited{
	color:#a80602;
}
#headercontent a:hover{
	color:#000000;
}