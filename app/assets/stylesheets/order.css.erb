/* ORDER CONTAINER */
#ordercontainer{
	position:relative;
	width:100%;
	height:800px;
	background-color:#eaeaeb;
}
/* END ORDER CONTAINER */

/* ORDER CONTENT (TO CENTRALISE ALL CONTENT) */
#ordercontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	background: url(order/order_bg.png) 50% 0 no-repeat fixed;
	overflow-x:hidden;
}
/* END ORDER CONTENT */

/* ORDER BAG PICTURE */
#orderbag{
	position:absolute;
	width:208px;
	height:400px;
	top:50px;
	left:820px;
	background:url(order/order_bag.png) 50% 0 no-repeat;
}
/* END ORDER BAG PICTURE */

#ordersub{
	position:relative;
	width:514px;
	height:280px;
	top:400px;
	margin-right:auto;
	margin-left:auto;
	background-repeat:no-repeat;
	background-image:url(order/order_sub.png);    
}

/* ORDER HEADING */
#orderheading{
	position:absolute;
	top:40px;
	left:250px;
	height:100px;
}
/* END ORDER HEADING */

/* ORDER HEADING H2 */
#orderheading h2{
	font-family:'Bebas'; 
	font-weight:normal!important;
	color:#000000;
	font-size:40px!important;
	margin-bottom:0;
	line-height:10px
	text-transform:uppercase;
}
/* END ORDER HEADING H2 */

/* ORDER HEADING H1 */
#orderheading h1{
	font-family:'Bebas';
	font-weight:normal!important;
	color:#53290a;
	font-size:100px!important;
	margin-left:-3px;
	line-height:85px; 
	text-transform:uppercase;
}
/* END ORDER HEADING H1 */

/* ORDER WRITING */
#orderwriting{
	position:absolute;
	width:450px;
	height:100px;
	top:260px;
	left:250px;
	color:#53290a;
}
/* END ORDER WRITING */


/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#ordercontainer a:link{
	background-image:url(order/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#000000;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#ordercontainer a:visited{
	color:#000000;
}

#ordercontainer a:hover{
	color:#53290a;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
