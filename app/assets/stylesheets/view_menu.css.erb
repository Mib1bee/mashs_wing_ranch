/* MENU CONTAINER CLASS*/
.menucontainer{
	position:relative;
	background-color:#000000;
	overflow-x:none;
	overflow-x:hidden;
}
/* END MENU CONTAINER CLASS */

/* MENU CONTENT CLASS (TO CENTRALISE ALL CONTENT) */
.menucontent{
	width:1280px;
	position:relative;
	margin-left:auto;
	margin-right:auto;
	margin-top:0px;
	overflow-x:hidden;
	padding-left:250px;
	padding-top:100px;
	padding-bottom:100px;
	overflow:hidden;
	overflow-x:hidden;
}
/* END MENU CONTENT CLASS */

#menuitem{
	margin-top:30px;
}

/* START MENU CONTENT h1 */
.menucontent h1{
	font-family:'Bebas';
	font-size:100px;
	font-weight:normal!important;
	color:#f0e7cd;  
	margin:0;
	line-height:80px;
}
/* END MENU CONTENT h1 */

/* START MENU CONTENT h2 */
.menucontent h2{
	font-family:'Bebas';
	font-size:24px;
	font-weight:normal!important;
	color:#bf402d;
	width:550px;
	margin-top:-5px;
}
/* END MENU CONTENT h2 */

/* MENU CONTENT h3*/
.menucontent h3{
	font-family:'Signika';
	font-weight:normal!important; 
	font-size:20px;
	color:#ffffff;
	width:500px; 

}
/* END MENU CONTENT h3*/

/* MENU CONTENT p*/
.menucontent p{
	font-family:'Signika';
	font-weight:normal!important; 
	font-size:16px;
	color:#f0e7cd;
	width:650px; 

}
/* END MENU CONTENT p*/



