/* MENU CONTAINER CLASS*/
.menucontainer{
	position:relative;
	background-color:#000000;
	overflow-x:none;
	overflow-x:hidden;
}
/* END MENU CONTAINER CLASS */

/* MENU CONTENT CLASS (TO CENTRALISE ALL CONTENT) */
.menucontent{
	width:1280px;
	position:relative;
	margin-left:auto;
	margin-right:auto;
	overflow-x:hidden;
	padding-left:250px;
	padding-top:100px;
	padding-bottom:100px;
	overflow:hidden;
	overflow-x:hidden;
}
/* END MENU CONTENT CLASS */

#menunavigation{
	position:fixed;
	top:63px;
	left:900px;
	padding-top:30px;
	z-index:1;
	background-color:#f33434;
}


#menunavigation a {
	color:white; 
}


#menunavigation ul{
	list-style-type:none;
	height:50px;
}

#menunavigation ul li{
	display:block;
 	width:75px;
 	height:35px;
	background-color:#f33434;
	color:#f0e7cd;
	border-top:1px solid #f65050;
	padding:10px;  
	*display:inline;
	*zoom:1;
	font-size:12px;
	text-align:left;
	vertical-align:middle;  
}

#menunavigation ul li:hover{
	background-color:#cd3333;
}

#menuitem{
	margin-top:30px;
}

