/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#allmenuitems a:link{
	background-image:url(ranches/bull_link.png);
	background-repeat:no-repeat;
	background-position:right;
	padding-right:30px; 
	color:#b23232;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#allmenuitems a:visited{
	color:#b23232;
}

#allmenuitems a:hover{
	color:#ffffff;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */

