/* FRANCHISE CONTAINER */
#franchisecontainer{
	position:relative;
	width:100%;
	height:800px;
	background-color:#c51209;
	margin-top:63px;
}
/* END ABOUT FRANCHISE */

/* FRANCHISE CONTENT (TO CENTRALISE ALL CONTENT) */
#franchisecontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	margin-top:0px;
	background: url(franchise/franchise_bg.png) 50% 0 no-repeat fixed;
	overflow-x:hidden;
	padding-bottom:50px; 
}
/* FRANCHISE ORDER CONTENT */

/* FRANCHISE BULL PICTURE */
#franchisebull{
	position:absolute;
	width:117px;
	height:141px;
	top:75px;
	left:250px;
	background:url(franchise_application/bull.png) no-repeat;
}
/* END FRANCHISE BULL PICTURE */

/* FRANCHISE HEADING */
#franchiseheading{
	position:absolute;
	top:55px;
	left:375px;
	height:100px;
}
/* END FRANCHISE HEADING */

/* FRANCHISE HEADING H2 */
#franchiseheading h2{
	font-family:'Bebas Neue'; 
	font-weight:normal!important;
	color:#000000;
	font-size:25px!important;
	text-transform:uppercase;
}
/* END FRANCHISE HEADING H2 */

/* FRANCHISE HEADING H1 */
#franchiseheading h1{
	font-family:'Bebas Neue';
	font-weight:normal!important;
	color:#f9edb4;
	font-size:60px!important;
	line-height:50px; 
	text-transform:uppercase;
}
/* END FRANCHISE HEADING H1 */

#franchiselinks{
	position:absolute;
	top:200px;
	left:375px; 
}

/* CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */
#franchisecontainer a:link{
	font-size:15px;
	margin-right:15px;
	line-height:0px; 
	background-repeat:no-repeat;
	background-position:right;
	color:#000000;
	-webkit-transition: color 0.5s ease-in-out;
	-moz-transition: color 0.5s ease-in-out;
	-o-transition: color 0.5s ease-in-out;
	transition: color 0.5s ease-in-out;
}

#franchisecontainer a:visited{
	color:#000000;
}

#franchisecontainer a:hover{
	color:#f9edb4;
}
/* END CSS FOR LINK STYLING FOR THIS SECTION OF WEBSITE */

