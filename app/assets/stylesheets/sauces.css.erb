/* ABOUT CONTAINER */
#saucescontainer{
	position:relative;
	width:100%;
	height:800px;
	background-color:#000000;
}
/* END ABOUT CONTAINER */

/* ABOUT CONTENT (TO CENTRALISE ALL CONTENT) */
#saucescontent{
	position:relative;
	width:1280px;
	height:800px;
	margin-left:auto;
	margin-right:auto;
	background: url(sauces/sauces_bg.png) 50% 0 no-repeat fixed;
	overflow-x:hidden;
}
/* END SAUCES CONTENT */

